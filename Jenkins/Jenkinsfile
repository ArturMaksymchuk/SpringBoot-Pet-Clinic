pipeline{
    agent any
    stages{
        // stage("package app"){
        //     steps{
        //         sh "mvn package"
        //     }
            
        // }
        stage("create docker image"){
            steps{
                
                sh "docker build  -t martur/app:latest  -f docker/dockerfile ."
                
            }
            
        }
        stage("push image to hub"){
            steps{
                script{
                    withCredentials([string(credentialsId: 'dockerhub-pwd', variable: 'dokerhub-pwd')]) {
                    sh "docker login -u marturi -p ${dokerhub-pwd}"
}
                }
                sh "docker push martur/app:latest "
                
            }
            
        }
        stage("kubectl"){
            steps{
                sh "ls"
                echo "========executing A========"
            }
            
        }
    }
    
}