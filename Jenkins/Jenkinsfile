        stage("create cluster") {
            environment {
                cluster_name = 'clinic3'
                region_name = 'eu-central-1'
            }
            steps {
                script {
                    withAWS(region: 'eu-central-1', credentials: 'aws-credentials') {
                        def cluster_exists = sh(script: "eksctl get cluster $cluster_name | awk 'NR==2{print \$1}'", returnStatus: true)
                        if (cluster_exists == 0) {
                            echo 'cluster created'
                            sh "aws eks --region $region_name update-kubeconfig --name $cluster_name"
                        } else {
                            sh "eksctl create cluster --name $cluster_name --region $region_name --instance-types t2.micro --nodes 1"
                        }
                        
                    }
                }
                echo "done"
            }
        }
    }
    
}
